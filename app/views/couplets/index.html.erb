<p id="notice"><%= notice %></p>

<h1>Couplets</h1>

<table>
  <thead>
    <tr>
      <th>Couplet</th>
      <th>Poet</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @couplets.each do |couplet| %>
      <tr>
        <td><%= couplet.couplet %></td>
        <td><%= couplet.poet.name %></td>
        <td><%= link_to 'Show', couplet %></td>
        <td><%= link_to 'Edit', edit_couplet_path(couplet) %></td>
        <td><%= link_to 'Destroy', couplet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Couplet', new_couplet_path %>
